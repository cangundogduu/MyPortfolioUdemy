@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacak Güncelleme Alanı</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar ile ilgili güncelleme işlemlerini aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <form method="post">
                            <input type="hidden" asp-for="ToDoListId"/>
                            <label>Yapılacak Başlığı & İçerik Bilgisi</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />

                            <label>Tatih</label>
                            <input type="date" asp-for="Date" class="form-control" />
                            <br />

                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>